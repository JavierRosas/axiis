<!---
	 BarStack groups a series of horizontal bars together horizontally
	 and labels them. This class is intended to be used to produce multi-series
	 bar charts.
-->
<chartLayouts:ChartLayoutBase xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:degrafa="http://www.degrafa.com/2007"
	name="outerlayout"
	xmlns:layouts="org.axiis.layouts.*"
	xmlns:scale="org.axiis.layouts.scale.*"
	xmlns:states="org.axiis.states.*"
	xmlns:core="org.axiis.core.*"
	xmlns:utils="org.axiis.layouts.utils.*"
	xmlns:chartLayouts="org.axiis.charts.layouts.*"
	fontSize="10">

	<mx:Script>
		<![CDATA[
			import org.axiis.utils.ObjectUtils;
			import com.degrafa.IGeometryComposition;
			
			public function set additionalGeometries(value:IGeometryComposition)
			{
				_additionalGeometries=value;
				geomPlaceholder.geometry=[_additionalGeometries];
			}
			
			public function get additionalGeometries():IGeometryComposition
			{
				return _additionalGeometries;
			}
			
			[Bindable]
			private var _additionalGeometries:IGeometryComposition;


		]]>
	</mx:Script>
	<!---
		 The scale used to map data values to the BarStack's coordinate space.
	-->
	<scale:LinearScale id="horizontalScale"/>

	<chartLayouts:referenceRepeater>
		<utils:GeometryRepeater>
			<utils:geometry>
				<!--- @private -->
				<degrafa:RegularRectangle id="refRect"
					width="{0}"
					height="{height}"
					enableEvents="false"
					x="0"
					y="0"/>
			</utils:geometry>
			<utils:modifiers>
				<!--- @private -->
				<utils:PropertyModifier id="widthModifier" property="width" modifier="{Number(this.horizontalScale.valueToLayout(currentValue))}" modifierOperator="none"/>
				<!--- @private -->
				<utils:PropertyModifier id="xModifier" property="x" modifier="{(currentIndex == 0) ? 0 : Number(this.horizontalScale.valueToLayout(ObjectUtils.getProperty(this,dataItems[currentIndex-1],dataField)))}" modifierOperator="add"/>
			</utils:modifiers>
		</utils:GeometryRepeater>
	</chartLayouts:referenceRepeater>

	<chartLayouts:drawingGeometries>
		<!---
			 main column rectangle that gets repeated vertically
			 @private
		-->
		<degrafa:RegularRectangle id="myBar"
			y="0"
			enableEvents="false"
			x="{currentReference.x}"
			width="{currentReference.width}"
			height="{currentReference.height}"
			fill="{fill}"
			stroke="{stroke}">
		</degrafa:RegularRectangle>

		<!---
			smaller label for each column
			@private
		-->
		<degrafa:RasterText id="label"
			text="{(currentLabel ? currentLabel:' ')}"
			visible="{showLabel}"
			enableEvents="false"
			x="{myBar.x+myBar.width-label.width}"
			height="15"
			width="70"
			y="{myBar.y+(myBar.height-label.height)/2}"
			fontSize="{fontSize}"
			align="right"
			fontFamily="{fontFamily}"
			fontWeight="{fontWeight}"
			textColor="{fontColor}">
		</degrafa:RasterText>
		
			<!--- @private -->
		<degrafa:RegularRectangle id="geomPlaceholder"
								  width="{this.width}"
								  height="{this.height}"/>
	</chartLayouts:drawingGeometries>
	
